@model IEnumerable<FriendlySeed.Models.Menu>

@{
    ViewData["Title"] = "選單管理";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-list"></i> 選單管理
                </h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-success btn-sm" onclick="exportToExcel()">
                        <i class="fas fa-file-excel"></i> 匯出 Excel
                    </button>
                    <button type="button" class="btn btn-primary btn-sm" onclick="openCreateModal()">
                        <i class="fas fa-plus"></i> 新增選單
                    </button>
                    <button type="button" class="btn btn-info btn-sm" onclick="testModal()">
                        <i class="fas fa-test"></i> 測試 Modal
                    </button>
                </div>
            </div>
            <div class="card-body">
                <table id="menuTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>選單名稱</th>
                            <th>排序</th>
                            <th>狀態</th>
                            <th>建立時間</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var rootMenus = Model.Where(m => !m.ParentID.HasValue).OrderBy(m => m.SortOrder).ToList();
                        }
                        @foreach (var menu in rootMenus)
                        {
                            @await Html.PartialAsync("_MenuRow", new { Menu = menu, AllMenus = Model, Level = 0 })
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Menu 新增/編輯 Modal -->
<div class="modal fade" id="menuModal" tabindex="-1" aria-labelledby="menuModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="menuModalLabel">新增選單</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="menuForm" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" id="menuID" name="MenuID" />
                    <input type="hidden" id="createdTime" name="CreatedTime" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="menuName" class="form-label">選單名稱 *</label>
                                <input type="text" id="menuName" name="MenuName" class="form-control" placeholder="請輸入選單名稱" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="parentID" class="form-label">父選單</label>
                                <select id="parentID" name="ParentID" class="form-control">
                                    <option value="">請選擇父選單（留空為根選單）</option>
                                    @foreach (var menu in Model.Where(m => m.IsActive))
                                    {
                                        <option value="@menu.MenuID" data-menu-id="@menu.MenuID">@menu.MenuName</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="iconUrl" class="form-label">圖示網址</label>
                                <input type="url" id="iconUrl" name="IconUrl" class="form-control" placeholder="請輸入圖示網址" />
                                <small class="form-text text-muted">例如：https://example.com/icon.png 或 fas fa-home</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="menuUrl" class="form-label">選單網址</label>
                                <input type="url" id="menuUrl" name="MenuUrl" class="form-control" placeholder="請輸入選單網址" />
                                <small class="form-text text-muted">例如：/Admin/Home 或 https://example.com</small>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="sortOrder" class="form-label">排序</label>
                                <input type="number" id="sortOrder" name="SortOrder" class="form-control" placeholder="請輸入排序數字" value="0" />
                                <small class="form-text text-muted">數字越小排序越前面</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-check mt-4">
                                    <input type="checkbox" id="isActive" name="IsActive" class="form-check-input" checked />
                                    <label for="isActive" class="form-check-label">啟用選單</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                    <button type="submit" class="btn btn-primary">儲存</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- 刪除確認 Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">確認刪除</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>確定要刪除選單「<span id="deleteMenuName"></span>」嗎？</p>
                <p class="text-danger">此操作無法復原！</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">確定刪除</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // DataTable 會由 admin.js 自動初始化，這裡只需要設定特定選項
            // 如果需要特殊設定，可以在 admin.js 中針對特定表格進行設定
            
            // TreeGrid 展開/收合功能
            $('.tree-toggle').on('click', function() {
                var menuId = $(this).data('menu-id');
                var $icon = $(this);
                var $parentRow = $icon.closest('tr');
                var $childRows = $parentRow.nextUntil('tr[data-level=' + $parentRow.data('level') + ']');
                
                if ($icon.hasClass('fa-chevron-down')) {
                    // 展開子選單
                    $childRows.show();
                    $icon.removeClass('fa-chevron-down').addClass('fa-chevron-up');
                } else {
                    // 收合子選單
                    $childRows.hide();
                    $icon.removeClass('fa-chevron-up').addClass('fa-chevron-down');
                }
            });
            
            // 調試：檢查按鈕點擊事件
            $('.btn-primary').on('click', function() {
                console.log('新增按鈕被點擊');
            });
            
            // 調試：檢查儲存按鈕點擊事件
            $(document).on('click', 'button[type="submit"]', function() {
                console.log('儲存按鈕被點擊');
            });
            
            // 表單提交事件 - 使用 AJAX 提交
            $('#menuForm').on('submit', function(e) {
                console.log('表單提交事件觸發');
                e.preventDefault(); // 防止預設提交
                
                // 基本驗證
                var menuName = $('#menuName').val();
                if (!menuName || menuName.trim() === '') {
                    alert('請輸入選單名稱');
                    return false;
                }
                
                // 檢查外鍵約束：不能將自己設為父選單
                var menuId = $('#menuID').val();
                var parentId = $('#parentID').val();
                if (menuId && parentId && menuId === parentId) {
                    alert('選單不能將自己設為父選單');
                    return false;
                }
                
                // 檢查父選單是否為空字串，如果是則設為 null
                if (parentId === '') {
                    parentId = null;
                }
                
                console.log('表單驗證通過，準備提交');
                console.log('表單 action:', $(this).attr('action'));
                console.log('表單資料:', $(this).serialize());
                
                // 使用 AJAX 提交表單
                $.ajax({
                    url: $(this).attr('action'),
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function(response) {
                        console.log('提交成功:', response);
                        alert('操作成功');
                        $('#menuModal').modal('hide');
                        location.reload(); // 重新載入頁面
                    },
                    error: function(xhr, status, error) {
                        console.log('提交失敗:', error);
                        console.log('回應內容:', xhr.responseText);
                        alert('操作失敗: ' + error);
                    }
                });
            });
        });

        function toggleStatus(menuId) {
            $.ajax({
                url: '@Url.Action("ToggleStatus")',
                type: 'POST',
                data: { id: menuId },
                success: function(response) {
                    if (response.success) {
                        toastr.success(response.message);
                        location.reload();
                    } else {
                        toastr.error(response.message);
                    }
                },
                error: function() {
                    toastr.error('操作失敗，請稍後再試');
                }
            });
        }

        function openCreateModal() {
            console.log('openCreateModal 函數被調用');
            $('#menuModalLabel').text('新增選單');
            $('#menuForm')[0].reset();
            $('#menuID').val('');
            $('#createdTime').val('');
            $('#menuForm').attr('action', '@Url.Action("Create")');
            
            // 新增時顯示所有父選單選項
            $('#parentID option').show();
            
            console.log('Modal action set to:', $('#menuForm').attr('action'));
            
            // 使用 Bootstrap 5 的方式顯示 Modal
            var modalElement = document.getElementById('menuModal');
            var modal = new bootstrap.Modal(modalElement);
            modal.show();
        }

        function openEditModal(menuId, menuName, parentId, sortOrder, isActive, iconUrl, menuUrl) {
            console.log('openEditModal 函數被調用');
            console.log('參數:', {menuId, menuName, parentId, sortOrder, isActive, iconUrl, menuUrl});
            
            $('#menuModalLabel').text('編輯選單');
            $('#menuID').val(menuId);
            $('#menuName').val(menuName);
            $('#parentID').val(parentId || '');
            $('#sortOrder').val(sortOrder);
            $('#iconUrl').val(iconUrl || '');
            $('#menuUrl').val(menuUrl || '');
            $('#isActive').prop('checked', isActive === 'true');
            $('#menuForm').attr('action', '@Url.Action("Edit")');
            
            console.log('Edit modal values set:', {
                menuId: menuId,
                menuName: menuName,
                parentId: parentId,
                sortOrder: sortOrder,
                isActive: isActive
            });
            
            // 在編輯時隱藏自己，避免自我引用
            $('#parentID option').show();
            $('#parentID option[data-menu-id="' + menuId + '"]').hide();
            
            console.log('Modal action set to:', $('#menuForm').attr('action'));
            console.log('MenuID set to:', $('#menuID').val());
            
            var menuModal = new bootstrap.Modal(document.getElementById('menuModal'));
            menuModal.show();
        }

        function deleteMenu(menuId, menuName) {
            $('#deleteMenuName').text(menuName);
            $('#deleteForm').attr('action', '@Url.Action("Delete")/' + menuId);
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }

        function exportToExcel() {
            // 使用 DataTable 的按鈕功能來匯出 Excel
            var table = $('#menuTable').DataTable();
            table.button('.buttons-excel').trigger();
        }

        function testModal() {
            console.log('測試 Modal 按鈕被點擊');
            alert('測試按鈕正常運作！');
            $('#menuModal').modal('show');
        }
    </script>
}
