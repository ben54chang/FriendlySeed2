@model FriendlySeed.Models.ArticleCategory

@{
    ViewData["Title"] = "Debug Test";
}

<div class="container">
    <h2>Debug Test - 簡化測試</h2>
    
    <form method="post" action="@Url.Action("Create")">
        @Html.AntiForgeryToken()
        
        <div class="form-group mb-3">
            <label for="ArticleCategoryName">分類名稱 *</label>
            <input type="text" id="ArticleCategoryName" name="ArticleCategoryName" class="form-control" required />
        </div>
        
        <div class="form-group mb-3">
            <label for="SortOrder">排序</label>
            <input type="number" id="SortOrder" name="SortOrder" class="form-control" value="10" min="0" />
        </div>
        
        <div class="form-group mb-3">
            <label>
                <input type="checkbox" id="IsActive" name="IsActive" value="true" checked />
                啟用狀態
            </label>
        </div>
        
        <button type="submit" class="btn btn-primary">測試提交</button>
    </form>
    
    <hr />
    
    <h3>測試編輯</h3>
    <form method="post" action="@Url.Action("Edit")">
        @Html.AntiForgeryToken()
        
        <div class="form-group mb-3">
            <label for="ArticleCategoryID">分類ID</label>
            <input type="number" id="ArticleCategoryID" name="ArticleCategoryID" class="form-control" value="1" />
        </div>
        
        <div class="form-group mb-3">
            <label for="ArticleCategoryName2">分類名稱 *</label>
            <input type="text" id="ArticleCategoryName2" name="ArticleCategoryName" class="form-control" value="測試分類" required />
        </div>
        
        <div class="form-group mb-3">
            <label for="SortOrder2">排序</label>
            <input type="number" id="SortOrder2" name="SortOrder" class="form-control" value="10" min="0" />
        </div>
        
        <div class="form-group mb-3">
            <label>
                <input type="checkbox" id="IsActive2" name="IsActive" value="true" checked />
                啟用狀態
            </label>
        </div>
        
        <button type="submit" class="btn btn-warning">測試編輯</button>
    </form>
</div>
