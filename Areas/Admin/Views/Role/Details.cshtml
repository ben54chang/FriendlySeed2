@model FriendlySeed.Models.Role

@{
    ViewData["Title"] = "角色詳情";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-users-cog"></i> 角色詳情
                </h3>
                <div class="card-tools">
                    <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left"></i> 返回列表
                    </a>
                </div>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">角色ID：</dt>
                    <dd class="col-sm-9">@Model.RoleID</dd>
                    
                    <dt class="col-sm-3">角色名稱：</dt>
                    <dd class="col-sm-9">
                        <strong>@Model.RoleName</strong>
                    </dd>
                    
                    <dt class="col-sm-3">啟用狀態：</dt>
                    <dd class="col-sm-9">
                        <span class="badge @(Model.IsActive ? "badge-success" : "badge-danger")">
                            @(Model.IsActive ? "啟用" : "停用")
                        </span>
                    </dd>
                    
                    <dt class="col-sm-3">建立時間：</dt>
                    <dd class="col-sm-9">@Model.CreatedTime.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                    
                    <dt class="col-sm-3">更新時間：</dt>
                    <dd class="col-sm-9">@Model.UpdatedTime.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                </dl>
            </div>
            <div class="card-footer">
                <a href="@Url.Action("Edit", new { id = Model.RoleID })" class="btn btn-primary">
                    <i class="fas fa-edit"></i> 編輯角色
                </a>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-list"></i> 返回列表
                </a>
            </div>
        </div>
    </div>
</div>

