@model FriendlySeed.Models.User

@{
    ViewData["Title"] = "刪除使用者";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">刪除使用者</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> 返回列表
    </a>
</div>

<div class="alert alert-warning" role="alert">
    <i class="fas fa-exclamation-triangle"></i>
    <strong>警告！</strong> 您確定要刪除這個使用者嗎？此操作無法復原。
</div>

<div class="card shadow">
    <div class="card-header">
        <h5 class="mb-0">使用者資訊</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <p><strong>ID:</strong> @Model.ID</p>
                <p><strong>使用者名稱:</strong> @Model.Username</p>
                <p><strong>顯示名稱:</strong> @Model.DisplayName</p>
                <p><strong>電子信箱:</strong> @Model.Email</p>
            </div>
            <div class="col-md-6">
                <p><strong>角色:</strong> @Model.Role?.RoleName</p>
                <p><strong>狀態:</strong> 
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">啟用</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">停用</span>
                    }
                </p>
                <p><strong>建立時間:</strong> @Model.CreatedTime.ToString("yyyy-MM-dd HH:mm")</p>
            </div>
        </div>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-4">
    <input asp-for="ID" type="hidden" />
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-danger me-2" onclick="return confirm('確定要刪除這個使用者嗎？此操作無法復原。')">
            <i class="fas fa-trash"></i> 確認刪除
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-times"></i> 取消
        </a>
    </div>
</form>
