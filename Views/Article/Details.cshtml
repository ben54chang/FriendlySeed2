@model FriendlySeed.Models.Article
@{
    ViewData["Title"] = Model.Title;
}

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <article class="card">
                <div class="card-body">
                    <!-- 文章標題 -->
                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <span class="badge bg-primary">@Model.Category?.ArticleCategoryName</span>
                            @if (Model.IsTop)
                            {
                                <span class="badge bg-warning">
                                    <i class="fas fa-star"></i> 置頂
                                </span>
                            }
                        </div>
                        <h1 class="display-6 fw-bold">@Model.Title</h1>
                        <div class="d-flex align-items-center text-muted">
                            <i class="fas fa-user me-2"></i>
                            <span class="me-4">@Model.Author</span>
                            <i class="fas fa-calendar me-2"></i>
                            <span>@Model.PublishTime?.ToString("yyyy年MM月dd日")</span>
                        </div>
                    </div>

                    <!-- 文章內容 -->
                    <div class="article-content">
                        @Html.Raw(Model.Description ?? "內容即將推出...")
                    </div>

                    <!-- 文章標籤 -->
                    @if (!string.IsNullOrEmpty(Model.Tags))
                    {
                        <div class="mt-4">
                            <h6 class="text-muted">標籤</h6>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var tag in Model.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                {
                                    <span class="badge bg-light text-dark border">#@tag.Trim()</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            </article>

            <!-- 返回按鈕 -->
            <div class="mt-4">
                <a href="@Url.Action("Index")" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left"></i> 返回文章列表
                </a>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- 相關文章 -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-newspaper"></i> 相關文章
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">更多精彩文章即將推出...</p>
                </div>
            </div>

            <!-- 作者資訊 -->
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user"></i> 作者資訊
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <i class="fas fa-user-circle fa-3x text-muted mb-2"></i>
                        <h6>@Model.Author</h6>
                        <p class="text-muted small">友善種子教育平台</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.article-content {
    line-height: 1.8;
    font-size: 1.1rem;
}

.article-content h1,
.article-content h2,
.article-content h3,
.article-content h4,
.article-content h5,
.article-content h6 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: #333;
}

.article-content p {
    margin-bottom: 1.5rem;
}

.article-content img {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 1rem 0;
}

.article-content blockquote {
    border-left: 4px solid #0d6efd;
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #666;
}
</style>
