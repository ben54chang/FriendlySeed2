{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=FriendlySeed;Trusted_Connection=true;TrustServerCertificate=true;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Warning",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "JwtSettings": {
    "SecretKey": "FriendlySeed_SecretKey_2024_ThisIsAVeryLongSecretKeyForJWTTokenGeneration",
    "Issuer": "FriendlySeed",
    "Audience": "FriendlySeedUsers",
    "ExpiryMinutes": 60
  },
  "AllowedHosts": "*"
}

